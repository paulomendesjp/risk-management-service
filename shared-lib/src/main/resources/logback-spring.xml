<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Console Appender for Development -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level [%X{clientId}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- MANDATORY AUDIT LOGS - Simple File Appender -->
    <appender name="MANDATORY_AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/mandatory-audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/mandatory-audit.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>365</maxHistory> <!-- Keep 1 year for compliance -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        
        <!-- Simple pattern - just the JSON message -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- System Logs -->
    <appender name="SYSTEM_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/system.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/system.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level [%X{clientId}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- MANDATORY AUDIT Logger - Dedicated for compliance -->
    <logger name="RISK.AUDIT" level="INFO" additivity="false">
        <appender-ref ref="MANDATORY_AUDIT_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Application Loggers -->
    <logger name="com.interview.challenge" level="DEBUG"/>
    <logger name="org.springframework" level="INFO"/>
    
    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SYSTEM_FILE"/>
    </root>
    
</configuration>